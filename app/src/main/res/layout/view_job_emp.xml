<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/clg">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvAddJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Details"
        android:textColor="@color/colorYellow"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"/>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Job Tiltle"
            android:textColor="@color/colorYellow"
            />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtextview"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Description :"
            android:textColor="@color/colorYellow"
            tools:layout_editor_absoluteY="291dp" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtextview"
         />


    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textColor="@color/colorYellow"
            />

        <TextView

            android:id="@+id/tvSkills"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtextview"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="349dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Number of Vacancies :"
            android:textColor="@color/colorYellow"
            />

        <TextView
            android:id="@+id/tvVac"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtextview"
            android:inputType="number"
            />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Add Date :"
            android:textColor="@color/colorYellow"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtextview"
            android:inputType="number"
            />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Details :"
        android:layout_margin="5dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Company Name : "
            android:textColor="@color/colorYellow"
            />

        <TextView
            android:id="@+id/companyName"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtextview"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="HR Name : "
            android:textColor="@color/colorYellow"
            />

        <TextView
            android:id="@+id/hrName"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtextview"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Company Register Date : "
            android:textColor="@color/colorYellow"
            />

        <TextView
            android:id="@+id/compRegistDate"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtextview"
            />

    </LinearLayout><LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mobile: "
            android:textColor="@color/colorYellow"
            />

        <TextView
            android:id="@+id/mobile"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtextview"
            />

    </LinearLayout><LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Email : "
            android:textColor="@color/colorYellow"
            />

        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtextview"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Address : "
            android:textColor="@color/colorYellow"
            />

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtextview"
            />

    </LinearLayout>


    <Button
        android:id="@+id/applyButton"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="Apply"
        android:onClick="apply"
        android:layout_margin="5dp"
        android:textColor="@color/colorYellow"

        />
    <Button
        android:id="@+id/smsButton"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="Message Us"
        android:onClick="messageUs"
        android:layout_margin="5dp"
        android:textColor="@color/colorYellow"

        /> <Button
        android:id="@+id/whatsappButton"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="Whatsapp Us"
        android:onClick="whatsappUs"
        android:layout_margin="5dp"
        android:textColor="@color/colorYellow"

        /><Button
        android:id="@+id/emailButton"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="Email Us"
        android:onClick="emailUs"
        android:layout_margin="5dp"
        android:textColor="@color/colorYellow"

        /><Button
        android:id="@+id/callButton"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/roundedbutton"
        android:text="Call Us"
        android:onClick="callUs"
        android:layout_margin="5dp"
        android:textColor="@color/colorYellow"

        />

</LinearLayout>

</ScrollView>

